<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.filmly.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_trendingList"
            app:destination="@id/listsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_cardDetailFragment"
            app:destination="@id/cardDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/listsFragment"
        android:name="com.example.filmly.ListsFragment"
        android:label="fragment_lists"
        tools:layout="@layout/fragment_lists" >
        <argument
            android:name="headLists"
            app:argType="com.example.filmly.domain.HeadLists" />
    </fragment>
    <fragment
        android:id="@+id/cardDetailFragment"
        android:name="com.example.filmly.CardDetailFragment"
        android:label="fragment_card_detail"
        tools:layout="@layout/fragment_card_detail" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.filmly.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_cardDetailFragment"
            app:destination="@id/cardDetailFragment" />
        <action
            android:id="@+id/action_searchFragment_to_ListsFragment"
            app:destination="@id/listsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.filmly.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/yourListsFragment"
        android:name="com.example.filmly.yourLists.YourListsFragment"
        android:label="fragment_your_lists"
        tools:layout="@layout/fragment_your_lists" />
</navigation>