<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    
    <style name="filmly">

        <item name="android:textSize">48sp</item>

        <item name="android:textColor">#FFCC18</item>

        <item name="android:shadowColor">#59FFCC18</item>

        <item name="android:shadowDx">0</item>

        <item name="android:shadowDy">4</item>

        <item name="android:shadowRadius">4</item>

    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Filmly" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black101010</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/icon_colors</item>
    </style>

    <style name="Widget.Filmly.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorActivatedHighlight">@color/white</item>
    </style>

    <style name="Theme.Filmly.Overlay.Button" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black101010</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.Filmly.Overlay.Button.Yellow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="Widget.Filmly.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAlignment">textStart</item>
        <item name="cornerRadius">10dp</item>
        <item name="colorPrimary">@color/gray900</item>
    </style>


</resources>