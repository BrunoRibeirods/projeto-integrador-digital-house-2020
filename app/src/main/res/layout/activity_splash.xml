<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/black"
    tools:context=".SplashActivity">


    <TextView
        android:id="@+id/filmly_logo_splashScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:fontFamily="@font/pacifico_regular"
        android:shadowColor="@color/shadow"
        android:shadowDx="6"
        android:shadowDy="11"
        android:shadowRadius="5"
        android:text="@string/app_name"
        android:textAppearance="@style/filmly"
        />

    <com.agrawalsuneet.dotsloader.loaders.LazyLoader
        android:id="@+id/lazy_dot_splashScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:lazyloader_animDur="800"
        app:lazyloader_dotsDist="10dp"
        app:lazyloader_dotsRadius="6dp"
        app:lazyloader_firstDelayDur="150"
        app:lazyloader_firstDotColor="@color/color_main"
        app:lazyloader_interpolator="@android:anim/decelerate_interpolator"
        app:lazyloader_secondDelayDur="300"
        app:lazyloader_secondDotColor="@color/color_main"
        app:lazyloader_thirdDotColor="@color/color_main" />





</LinearLayout>